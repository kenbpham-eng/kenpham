---
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
const title = "Ken Pham — Press";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="theme-color" content="#0b0b0b" />
    <title>{title}</title>
    <meta name="description" content="Ken Pham - Press" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href="https://www.kenpham.ca/press" />
    <!-- Plausible Analytics -->
    <script defer data-domain="www.kenpham.ca" src="https://plausible.io/js/script.js"></script>
    
    <!-- Open Graph / Twitter -->
    <meta property="og:site_name" content="Ken Pham" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Ken Pham — Press" />
    <meta property="og:description" content="Ken Pham - Press" />
    <meta property="og:url" content="https://www.kenpham.ca/press" />
    <meta property="og:image" content="https://www.kenpham.ca/press/press-docnyc-variety-1.jpeg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Ken Pham — Press" />
    <meta name="twitter:description" content="Ken Pham - Press" />
    <meta name="twitter:image" content="https://www.kenpham.ca/press/press-docnyc-variety-1.jpeg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
      :root { 
        --font-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif;
      }
      
      html, body { 
        margin: 0; 
        background: #0b0b0b;
        color: #f2f2f2;
        font-family: var(--font-primary);
        -webkit-font-smoothing: antialiased;
      }
      .wrap { max-width:1200px; margin:0 auto; padding:16px; }
      
      @media (max-width: 768px) {
        .wrap { padding: 24px; }
      }

      .press-content {
        margin-top: 48px;
      }

      .press-content > h2 {
        font-size: 24px;
        font-weight: 700;
        margin: 0 0 48px 0;
        letter-spacing: 0.5px;
      }

      .press-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(330px, 1fr));
        gap: 48px;
      }

      @media (max-width: 768px) {
        .press-grid {
          grid-template-columns: 1fr;
          gap: 40px;
        }
      }

      .press-item {
        display: block;
        text-decoration: none;
        color: inherit;
        transition: transform 0.2s ease;
      }

      .press-item:hover {
        transform: translateY(-4px);
      }

      .press-item:focus-visible {
        outline: 2px solid #fff;
        outline-offset: 4px;
        border-radius: 8px;
        transform: translateY(-4px);
      }

      .press-image {
        position: relative;
        width: 100%;
        aspect-ratio: 16 / 9;
        overflow: hidden;
        border-radius: 8px;
        margin-bottom: 16px;
        background: #141414;
      }

      .press-image img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: opacity 0.6s ease;
      }

      .press-image .img-base {
        z-index: 1;
      }

      .press-image .img-hover {
        opacity: 0;
        z-index: 2;
      }

      .press-item:hover .img-hover {
        opacity: 1;
      }

      .press-title {
        font-size: 18px;
        font-weight: 600;
        margin: 0 0 8px 0;
        line-height: 1.4;
        color: #f2f2f2;
      }

      .press-source {
        font-size: 14px;
        color: rgba(242, 242, 242, 0.6);
        margin: 0;
      }

      .skip-link {
        position: absolute;
        left: -999px;
        top: auto;
        width: 1px;
        height: 1px;
        overflow: hidden;
      }
      .skip-link:focus {
        position: fixed;
        left: 16px;
        top: 16px;
        width: auto;
        height: auto;
        padding: 10px 14px;
        background: #fff;
        color: #000;
        border-radius: 4px;
        z-index: 1000;
        text-decoration: none;
        border: 1px solid #0002;
        box-shadow: 0 2px 8px #0006;
      }

      @keyframes spin {
        to { transform: rotate(360deg); }
      }
      
      /* View Transitions API */
      @view-transition {
        navigation: auto;
      }
      
      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation-duration: 0.3s;
      }
    </style>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to content</a>
    <div class="wrap">
      <SiteHeader />

      <main id="main-content" class="press-content">
        <h2>PRESS</h2>
        <div class="press-grid">
          <a href="https://variety.com/2025/film/news/doc-nyc-film-lineup-1236541355/" class="press-item" target="_blank" rel="noopener noreferrer">
            <div class="press-image">
              <picture>
                <source srcset="/press/press-docnyc-variety-1.webp" type="image/webp" />
                <img src="/press/press-docnyc-variety-1.jpeg" alt="Variety: DOC NYC unveils 16th annual film lineup (thumbnail 1)" class="img-base" loading="lazy" />
              </picture>
              <picture>
                <source srcset="/press/press-docnyc-variety-2.webp" type="image/webp" />
                <img src="/press/press-docnyc-variety-2.jpeg" alt="" aria-hidden="true" class="img-hover" loading="lazy" />
              </picture>
            </div>
            <h3 class="press-title">DOC NYC Unveils 16th Annual Film Lineup (EXCLUSIVE)</h3>
            <p class="press-source">Variety</p>
          </a>

          <a href="https://www.reelworld.ca/reelworld-directors-immersion-program" class="press-item" target="_blank" rel="noopener noreferrer">
            <div class="press-image">
              <picture>
                <source srcset="/press/press-reelworldnbc-1.webp" type="image/webp" />
                <img src="/press/press-reelworldnbc-1.jpeg" alt="The Reelworld Directors Immersion Program in partnership with NBCUniversal (thumbnail 1)" class="img-base" loading="lazy" />
              </picture>
              <picture>
                <source srcset="/press/press-reelworldnbc-2.webp" type="image/webp" />
                <img src="/press/press-reelworldnbc-2.jpeg" alt="" aria-hidden="true" class="img-hover" loading="lazy" />
              </picture>
            </div>
            <h3 class="press-title">The Reelworld Directors Immersion Program in partnership with NBCUniversal</h3>
            <p class="press-source">Reelworld</p>
          </a>
        </div>
      </main>
      
      <SiteFooter />
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Mobile menu toggle functionality handled by SiteHeader
      });
    </script>
  </body>
  <button id="backToTop" aria-label="Back to top" tabindex="0" style="display:none;position:fixed;bottom:32px;right:32px;z-index:200;background:#181818cc;color:#fff;border:none;border-radius:50%;width:48px;height:48px;box-shadow:0 2px 12px #0007;cursor:pointer;transition:opacity 0.2s;outline:none;font-size:24px;align-items:center;justify-content:center;">
    ↑
  </button>
  <style>
    #backToTop:focus { outline: 2px solid #fff; }
    #backToTop[hidden] { display: none !important; }
  </style>
  <script>
    // Back to Top button logic
    (function(){
      const btn = document.getElementById('backToTop');
      function toggleBtn() {
        if(window.scrollY > 300) { btn.style.display = 'flex'; btn.style.opacity = '1'; } else { btn.style.opacity = '0'; setTimeout(()=>{btn.style.display='none';},200); }
      }
      window.addEventListener('scroll', toggleBtn);
      btn.addEventListener('click', ()=>{ window.scrollTo({top:0,behavior:'smooth'}); btn.blur(); });
      btn.addEventListener('keydown', e=>{ if(e.key==='Enter'||e.key===' '){ e.preventDefault(); window.scrollTo({top:0,behavior:'smooth'}); btn.blur(); }});
    })();
  </script>

  <div id="spinnerOverlay" style="position:fixed;inset:0;z-index:9999;background:#0b0b0be6;display:flex;align-items:center;justify-content:center;transition:opacity 0.3s;pointer-events:none;opacity:0;" hidden>
    <div style="width:48px;height:48px;border:4px solid #fff2;border-top:4px solid #fff;border-radius:50%;animation:spin 1s linear infinite;"></div>
  </div>

  <script>
    (function(){
      const spinner = document.getElementById('spinnerOverlay');
      function hideSpinner() {
        spinner.style.opacity = '0';
        setTimeout(() => { spinner.setAttribute('hidden', ''); }, 300);
      }
      
      // Hide immediately on page load
      hideSpinner();
    })();
  </script>
</html>
