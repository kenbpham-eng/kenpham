        position: absolute;
        top: 42px;
        right: 0;
        display: flex;
        gap: 32px;
        align-items: center;
      }
      .main-nav a {
        color: rgba(242, 242, 242, 0.6);
        text-decoration: none;
        font-size: 14px;
        font-weight: 400;
        letter-spacing: 0.3px;
        transition: color 0.2s ease;
        text-transform: lowercase;
      }
      .main-nav a:hover {
        color: #fff;
        text-decoration: underline;
        text-underline-offset: 6px;
        outline: none;
      }
      .main-nav a:focus {
        color: #fff;
        text-decoration: underline;
        text-underline-offset: 6px;
        outline: none;
      }
      .main-nav a.active {
        color: #f2f2f2;
        text-decoration: underline;
        text-underline-offset: 4px;
      }
      .site-header h1 {
        margin: 0;
        font-size: 32px;
        font-weight: 700;
        letter-spacing: 0.5px;
        color: #f2f2f2;
      }
      .site-header h1 a {
        color: #f2f2f2;
        text-decoration: none;
        transition: opacity 0.2s ease;
      }
      .site-header h1 a:hover {
        opacity: 0.7;
      }
      .header-title {
        display: flex;
        align-items: center;
        gap: 16px;
      }
      .social-icons {
        display: flex;
        gap: 12px;
        align-items: center;
      }
      .social-icons a {
        color: rgba(242, 242, 242, 0.7);
        transition: color 0.2s ease;
        display: flex;
        align-items: center;
        text-decoration: none;
      }
