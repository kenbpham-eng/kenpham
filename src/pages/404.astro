---
const title = "404 — Ken Pham";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
  <meta name="theme-color" content="#0b0b0b" />
    <title>{title}</title>
    <meta name="description" content="Page not found" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
      :root { 
        --font-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif;
      }
      html, body { 
        margin: 0; 
        background: #0b0b0b;
        color: #f2f2f2;
        font-family: var(--font-primary);
        -webkit-font-smoothing: antialiased;
        height: 100%;
      }
      .wrap { 
        max-width: 1200px; 
        margin: 0 auto; 
        padding: 16px;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      .site-header { 
        text-align: left;
        margin-bottom: 48px;
        padding: 32px 0;
        position: relative;
      }
      
      .menu-toggle {
        display: none;
        position: absolute;
        top: 32px;
        right: 0;
        background: none;
        border: none;
        cursor: pointer;
        padding: 8px;
        z-index: 100;
      }
      
      .menu-toggle span {
        display: block;
        width: 24px;
        height: 2px;
        background: #f2f2f2;
        margin: 5px 0;
        transition: 0.3s;
      }
      
      .main-nav {
        position: absolute;
        top: 42px;
        right: 0;
        display: flex;
        gap: 32px;
        align-items: center;
      }
      .main-nav a {
        color: rgba(242, 242, 242, 0.6);
        text-decoration: none;
        font-size: 14px;
        font-weight: 400;
        letter-spacing: 0.3px;
        transition: color 0.2s ease;
        text-transform: lowercase;
      }
      .main-nav a:hover {
        color: #fff;
        text-decoration: underline;
        text-underline-offset: 6px;
        outline: none;
      }
      .main-nav a:focus {
        color: #fff;
        text-decoration: underline;
        text-underline-offset: 6px;
        outline: none;
      }
      .site-header h1 {
        margin: 0;
        font-size: 32px;
        font-weight: 700;
        letter-spacing: 0.5px;
        color: #f2f2f2;
      }
      .site-header h1 a {
        color: #f2f2f2;
        text-decoration: none;
        transition: opacity 0.2s ease;
      }
      .site-header h1 a:hover {
        opacity: 0.7;
      }
      .header-title {
        display: flex;
        align-items: center;
        gap: 16px;
      }
      .social-icons {
        display: flex;
        gap: 12px;
        align-items: center;
      }
      .social-icons a {
        color: rgba(242, 242, 242, 0.7);
        transition: color 0.2s ease;
        display: flex;
        align-items: center;
        text-decoration: none;
      }
      .social-icons a.imdb-link {
        font-size: 11px;
        font-weight: 700;
        letter-spacing: 0.2px;
        border: 1px solid rgba(242, 242, 242, 0.7);
        border-radius: 3px;
        padding: 1px 5px;
        line-height: 1.2;
        transition: all 0.2s ease;
      }
      .social-icons a.imdb-link:hover {
        border-color: #f2f2f2;
      }
      .social-icons a:hover {
        color: #fff;
        outline: none;
        filter: drop-shadow(0 0 2px #fff2);
      }
      .social-icons a:focus {
        color: #fff;
        outline: none;
        filter: drop-shadow(0 0 2px #fff2);
      }
      .social-icons svg {
        width: 20px;
        height: 20px;
      }
      .site-header h2 {
        margin: 8px 0 0 0;
        font-size: 14px;
        font-weight: 400;
        letter-spacing: 0.2px;
        color: #f2f2f2;
      }
      
      .error-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 64px 16px;
      }

      .error-code {
        font-size: 120px;
        font-weight: 700;
        letter-spacing: -3px;
        margin: 0;
        color: rgba(242, 242, 242, 0.1);
        line-height: 1;
      }

      .error-title {
        font-size: 32px;
        font-weight: 600;
        margin: 24px 0 16px 0;
        letter-spacing: -0.5px;
      }

      .error-message {
        font-size: 16px;
        color: rgba(242, 242, 242, 0.7);
        margin-bottom: 48px;
        max-width: 500px;
        line-height: 1.6;
      }

      .error-links {
        display: flex;
        gap: 16px;
        flex-wrap: wrap;
        justify-content: center;
      }

      .error-links a {
        padding: 12px 24px;
        background: rgba(242, 242, 242, 0.1);
        color: #f2f2f2;
        text-decoration: none;
        border-radius: 4px;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.2s ease;
        border: 1px solid rgba(242, 242, 242, 0.2);
      }

      .error-links a:hover {
        background: rgba(242, 242, 242, 0.15);
        border-color: rgba(242, 242, 242, 0.3);
        transform: translateY(-1px);
      }

      .error-links a:focus {
        outline: 2px solid rgba(242, 242, 242, 0.5);
        outline-offset: 2px;
      }

      .error-links a.primary {
        background: #f2f2f2;
        color: #0b0b0b;
        border-color: #f2f2f2;
      }

      .error-links a.primary:hover {
        background: #fff;
        border-color: #fff;
      }

      .site-footer {
        margin-top: 96px;
        padding: 48px 0;
        border-top: 1px solid #2a2a2a;
        text-align: center;
      }

      .copyright {
        font-size: 13px;
        color: rgba(242, 242, 242, 0.4);
      }
      
      @media (max-width: 768px) {
        .site-header {
          text-align: center;
          padding: 24px 0;
        }
        
        .header-title {
          justify-content: center;
        }
        
        .menu-toggle {
          display: block;
        }
        
        .main-nav {
          position: fixed;
          top: 0;
          right: -100%;
          width: 70%;
          height: 100vh;
          background: #1a1a1a;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          gap: 32px;
          transition: right 0.3s ease;
          z-index: 99;
        }
        
        .main-nav.active {
          right: 0;
        }
        
        .main-nav a {
          font-size: 18px;
        }

        .error-code {
          font-size: 80px;
        }

        .error-title {
          font-size: 24px;
        }

        .error-message {
          font-size: 14px;
        }

        .error-links {
          flex-direction: column;
          width: 100%;
          max-width: 300px;
        }

        .error-links a {
          width: 100%;
        }
      }
    .skip-link {
      position: absolute;
      left: -999px;
      top: auto;
      width: 1px;
      height: 1px;
      overflow: hidden;
    }
    .skip-link:focus {
      position: fixed;
      left: 16px;
      top: 16px;
      width: auto;
      height: auto;
      padding: 10px 14px;
      background: #fff;
      color: #000;
      border-radius: 4px;
      z-index: 1000;
      text-decoration: none;
      border: 1px solid #0002;
      box-shadow: 0 2px 8px #0006;
    }
    </style>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to content</a>
    <div class="wrap">
      <header class="site-header">
        <button class="menu-toggle" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
        <nav class="main-nav">
          <a href="/">portfolio</a>
          <a href="/about">about</a>
          <a href="/press">press</a>
          <a href="/contact">contact</a>
        </nav>
        <div class="header-title">
          <h1><a href="/">KEN PHAM</a></h1>
          <div class="social-icons">
            <a href="mailto:kenbpham@icloud.com" aria-label="Email">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="4" width="20" height="16" rx="2"/>
                <path d="m2 7 10 7 10-7"/>
              </svg>
            </a>
            <a href="https://www.instagram.com/iamkenpham" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="2" width="20" height="20" rx="5"/>
                <circle cx="12" cy="12" r="4"/>
                <circle cx="18" cy="6" r="1"/>
              </svg>
            </a>
            <a href="https://www.imdb.com/name/nm7730137/" target="_blank" rel="noopener noreferrer" aria-label="IMDb" class="imdb-link">
              IMDb
            </a>
          </div>
        </div>
        <h2>Director & Filmmaker</h2>
      </header>

  <main id="main-content" class="error-content">
        <h1 class="error-code">404</h1>
        <h2 class="error-title">Page Not Found</h2>
        <p class="error-message">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <div class="error-links">
          <a href="/" class="primary" aria-label="Back to Home">Back to Home</a>
        </div>
      </main>

      <footer class="site-footer">
        <div class="copyright">
          © {new Date().getFullYear()} Ken Pham. All rights reserved.
        </div>
      </footer>
    </div>

    <script is:inline>
      // Mobile menu toggle (header)
      const menuToggle = document.querySelector('.menu-toggle');
      const nav = document.querySelector('.main-nav');
      
      if (menuToggle && nav) {
        menuToggle.addEventListener('click', () => {
          nav.classList.toggle('active');
          menuToggle.classList.toggle('active');
        });
        
        // Close menu when clicking outside
        document.addEventListener('click', (e) => {
          if (!e.target.closest('.site-header')) {
            nav.classList.remove('active');
            menuToggle.classList.remove('active');
          }
        });
        
        // Close menu when clicking a link
        nav.querySelectorAll('a').forEach(link => {
          link.addEventListener('click', () => {
            nav.classList.remove('active');
            menuToggle.classList.remove('active');
          });
        });
      }

      // No inline error menu toggle on this page; only Back to Home link remains
    </script>
  </body>
  <button id="backToTop" aria-label="Back to top" tabindex="0" style="display:none;position:fixed;bottom:32px;right:32px;z-index:200;background:#181818cc;color:#fff;border:none;border-radius:50%;width:48px;height:48px;box-shadow:0 2px 12px #0007;cursor:pointer;transition:opacity 0.2s;outline:none;font-size:24px;align-items:center;justify-content:center;">
    ↑
  </button>
  <style>
    #backToTop:focus { outline: 2px solid #fff; }
    #backToTop[hidden] { display: none !important; }
  </style>
  <script>
    // Back to Top button logic
    (function(){
      const btn = document.getElementById('backToTop');
      function toggleBtn() {
        if(window.scrollY > 300) { btn.style.display = 'flex'; btn.style.opacity = '1'; } else { btn.style.opacity = '0'; setTimeout(()=>{btn.style.display='none';},200); }
      }
      window.addEventListener('scroll', toggleBtn);
      btn.addEventListener('click', ()=>{ window.scrollTo({top:0,behavior:'smooth'}); btn.blur(); });
      btn.addEventListener('keydown', e=>{ if(e.key==='Enter'||e.key===' '){ e.preventDefault(); window.scrollTo({top:0,behavior:'smooth'}); btn.blur(); }});
    })();
  </script>
</html>
